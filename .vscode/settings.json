{
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/dist": true,
        "**/node_modules": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnPaste": true,
    "eslint.format.enable": true,
    "eslint.validate": [
        "typescript",
        "javascript"
    ],
    "eslint.workingDirectories": [
        "."
    ],
}